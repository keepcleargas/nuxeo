<?xml version="1.0"?>
<component name="org.nuxeo.ecm.directory.csv.loaded.never">

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="csvLoadSchema" src="directoryschema/directoryToLoadSchema.xsd"/>
  </extension>

  <extension target="org.nuxeo.ecm.directory.GenericDirectory"
             point="directories">

    <directory name="csvLoadedDirectory" extends="template-directory">
      <schema>csvLoadSchema</schema>
      <idField>id</idField>
      <!--<autoincrementIdField>true</autoincrementIdField>-->
      <createTablePolicy>never</createTablePolicy>
      <dataLoadingPolicy>never_load</dataLoadingPolicy>
      <!-- <dataLoadingPolicy>ignore_duplicate</dataLoadingPolicy>-->
      <!--<dataLoadingPolicy>update_duplicate</dataLoadingPolicy>-->
      <!--<dataLoadingPolicy>error_on_duplicate</dataLoadingPolicy>-->
      <dataFile>test-load-directory.csv</dataFile>
    </directory>

  </extension>

</component>
